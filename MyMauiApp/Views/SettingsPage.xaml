<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MyMauiApp.ViewModels"
             x:Class="MyMauiApp.Views.SettingsPage"
             x:DataType="viewmodels:SettingsViewModel"
             Title="Settings">

    <VerticalStackLayout Padding="30" Spacing="25">

        <Label
            Text="Settings"
            Style="{StaticResource Headline}"
            SemanticProperties.HeadingLevel="Level1" />

        <Border
            Padding="15"
            StrokeShape="RoundRectangle 8"
            Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray500}}"
            BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray600}}">
            <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto">
                <Label
                    Text="Dark Mode"
                    FontSize="18"
                    VerticalOptions="Center"
                    Grid.Row="0" Grid.Column="0" />

                <Switch
                    IsToggled="{Binding IsDarkMode}"
                    Grid.Row="0" Grid.Column="1"
                    VerticalOptions="Center" />

                <Label
                    Text="{Binding CurrentThemeText, StringFormat='Current theme: {0}'}"
                    FontSize="14"
                    TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray200}}"
                    Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                    Margin="0,5,0,0" />
            </Grid>
        </Border>

        <Button
            Text="Back"
            Command="{Binding GoBackCommand}"
            HorizontalOptions="Start" />

    </VerticalStackLayout>

</ContentPage>
