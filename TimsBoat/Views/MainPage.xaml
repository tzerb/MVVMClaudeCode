<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:TimsBoat.ViewModels"
             xmlns:services="clr-namespace:TimsBoat.Services"
             x:Class="TimsBoat.Views.MainPage"
             x:DataType="viewmodels:MainViewModel"
             Title="Tim's Boat - Batteries">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Battery Tabs -->
        <ScrollView Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalScrollBarVisibility="Never"
                    BackgroundColor="{AppThemeBinding Light={DynamicResource Gray100}, Dark={DynamicResource Gray900}}">
            <HorizontalStackLayout Padding="10,5" Spacing="5">
                <BindableLayout.ItemsSource>
                    <Binding Path="Batteries" />
                </BindableLayout.ItemsSource>
                <BindableLayout.ItemTemplate>
                    <DataTemplate x:DataType="viewmodels:BatteryTabViewModel">
                        <Frame Padding="15,10"
                               CornerRadius="8"
                               BorderColor="{AppThemeBinding Light={DynamicResource Gray300}, Dark={DynamicResource Gray600}}"
                               BackgroundColor="{AppThemeBinding Light=White, Dark={DynamicResource Gray800}}">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainViewModel}}, Path=SelectBatteryTabCommand}"
                                    CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>
                            <VerticalStackLayout>
                                <Label Text="{Binding TabTitle}"
                                       FontAttributes="Bold"
                                       FontSize="14" />
                                <Label FontSize="12"
                                       TextColor="{AppThemeBinding Light={DynamicResource Gray500}, Dark={DynamicResource Gray400}}"
                                       IsVisible="{Binding IsConnected}">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="{Binding StateOfCharge, StringFormat='{0}%'}" />
                                            <Span Text="  " />
                                            <Span Text="{Binding Current, StringFormat='{0:F1}A'}" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Label Text="{Binding TabStatusText}"
                                       FontSize="12"
                                       TextColor="{AppThemeBinding Light={DynamicResource Gray500}, Dark={DynamicResource Gray400}}"
                                       IsVisible="{Binding IsConnected, Converter={StaticResource InvertedBoolConverter}}" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </HorizontalStackLayout>
        </ScrollView>

        <!-- Selected Battery Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="15" BindingContext="{Binding SelectedBattery}">
                <Label Text="No batteries configured. Tap 'Connect New Battery' to add one."
                       IsVisible="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainViewModel}}, Path=SelectedBattery, Converter={StaticResource IsNullConverter}}"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="{AppThemeBinding Light={DynamicResource Gray500}, Dark={DynamicResource Gray400}}" />

                <VerticalStackLayout Spacing="15"
                                     IsVisible="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainViewModel}}, Path=SelectedBattery, Converter={StaticResource IsNotNullConverter}}"
                                     x:DataType="viewmodels:BatteryTabViewModel">

                    <!-- Status Section -->
                    <Frame BorderColor="{AppThemeBinding Light={DynamicResource Gray300}, Dark={DynamicResource Gray600}}"
                           BackgroundColor="{AppThemeBinding Light={DynamicResource Gray100}, Dark={DynamicResource Gray900}}"
                           Padding="15">
                        <VerticalStackLayout Spacing="10">
                            <Label Text="{Binding TabTitle}"
                                   FontAttributes="Bold"
                                   FontSize="18" />
                            <Label Text="{Binding Status}"
                                   FontSize="12"
                                   TextColor="{AppThemeBinding Light={DynamicResource Gray500}, Dark={DynamicResource Gray400}}"
                                   IsVisible="{Binding IsConnected, Converter={StaticResource InvertedBoolConverter}}" />
                            <Label Text="{Binding BatteryStatus}"
                                   FontSize="14"
                                   FontFamily="Consolas"
                                   TextColor="{AppThemeBinding Light={DynamicResource Gray600}, Dark={DynamicResource Gray300}}"
                                   IsVisible="{Binding IsConnected}" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Connect Button -->
                    <Button Command="{Binding ConnectCommand}"
                            IsEnabled="{Binding IsWorking, Converter={StaticResource InvertedBoolConverter}}"
                            BackgroundColor="{Binding IsConnected, Converter={StaticResource BoolToConnectColorConverter}}"
                            TextColor="White"
                            FontAttributes="Bold"
                            HeightRequest="50">
                        <Button.Text>
                            <MultiBinding Converter="{StaticResource ConnectButtonTextConverter}">
                                <Binding Path="IsWorking" />
                                <Binding Path="IsConnected" />
                            </MultiBinding>
                        </Button.Text>
                    </Button>

                    <!-- Cell Voltages -->
                    <Frame BorderColor="{AppThemeBinding Light={DynamicResource Gray300}, Dark={DynamicResource Gray600}}"
                           BackgroundColor="{AppThemeBinding Light={DynamicResource Gray100}, Dark={DynamicResource Gray900}}"
                           Padding="15"
                           IsVisible="{Binding IsConnected}">
                        <VerticalStackLayout Spacing="10">
                            <HorizontalStackLayout Spacing="10">
                                <Label Text="Cell Voltages"
                                       FontAttributes="Bold"
                                       FontSize="16" />
                                <Frame BackgroundColor="Green" Padding="5,2" CornerRadius="3" BorderColor="Transparent">
                                    <Label Text="High" FontSize="10" TextColor="White" />
                                </Frame>
                                <Frame BackgroundColor="Red" Padding="5,2" CornerRadius="3" BorderColor="Transparent">
                                    <Label Text="Low" FontSize="10" TextColor="White" />
                                </Frame>
                            </HorizontalStackLayout>
                            <FlexLayout BindableLayout.ItemsSource="{Binding CellVoltages}"
                                        Wrap="Wrap"
                                        JustifyContent="Start"
                                        AlignItems="Start">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate x:DataType="viewmodels:CellVoltageInfo">
                                        <Frame Margin="2"
                                               Padding="8,4"
                                               CornerRadius="4"
                                               BorderColor="{AppThemeBinding Light={DynamicResource Gray300}, Dark={DynamicResource Gray600}}"
                                               BackgroundColor="{Binding ., Converter={StaticResource CellVoltageColorConverter}}">
                                            <Label Text="{Binding Display}"
                                                   FontSize="12"
                                                   TextColor="{Binding ., Converter={StaticResource CellVoltageTextColorConverter}}" />
                                        </Frame>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </FlexLayout>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Delete Button -->
                    <Button Text="Delete Battery"
                            Command="{Binding DeleteCommand}"
                            BackgroundColor="{AppThemeBinding Light={DynamicResource Gray300}, Dark={DynamicResource Gray600}}"
                            TextColor="Red" />
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Connect New Battery Button -->
        <Button Grid.Row="2"
                Text="Connect New Battery"
                Command="{Binding ScanForDevicesCommand}"
                Margin="20,10"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                FontAttributes="Bold" />

        <!-- Device List Overlay -->
        <Grid Grid.RowSpan="3"
              IsVisible="{Binding ShowDeviceList}"
              BackgroundColor="{AppThemeBinding Light=#80000000, Dark=#80000000}">
            <Frame Margin="20"
                   Padding="15"
                   VerticalOptions="Center"
                   MaximumHeightRequest="400"
                   BackgroundColor="{AppThemeBinding Light=White, Dark={DynamicResource Gray900}}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Select Device"
                           FontAttributes="Bold"
                           FontSize="18"
                           HorizontalOptions="Center" />

                    <ActivityIndicator IsRunning="{Binding IsScanning}"
                                       IsVisible="{Binding IsScanning}"
                                       HeightRequest="30" />

                    <CollectionView ItemsSource="{Binding DiscoveredDevices}"
                                    MaximumHeightRequest="250"
                                    SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="services:BleDeviceInfo">
                                <Frame Margin="0,5" Padding="10" CornerRadius="5"
                                       BorderColor="{AppThemeBinding Light={DynamicResource Gray300}, Dark={DynamicResource Gray600}}">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainViewModel}}, Path=SelectDeviceCommand}"
                                            CommandParameter="{Binding .}" />
                                    </Frame.GestureRecognizers>
                                    <Label Text="{Binding DisplayName}"
                                           FontSize="14" />
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                        <CollectionView.EmptyView>
                            <Label Text="No devices found yet..."
                                   HorizontalOptions="Center"
                                   TextColor="{AppThemeBinding Light={DynamicResource Gray500}, Dark={DynamicResource Gray400}}" />
                        </CollectionView.EmptyView>
                    </CollectionView>

                    <Button Text="Cancel"
                            Command="{Binding CancelScanCommand}"
                            BackgroundColor="{AppThemeBinding Light={DynamicResource Gray300}, Dark={DynamicResource Gray600}}"
                            TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                </VerticalStackLayout>
            </Frame>
        </Grid>
    </Grid>
</ContentPage>
